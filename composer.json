{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "gillyware/momtrax",
    "type": "project",
    "description": "Baby tracking app for pumping, feeding, sleeping, and growth.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "gillyware/atlas": "^0.0.1",
        "gillyware/gatekeeper": "^2.1.1",
        "gillyware/postal": "^1.1.2",
        "inertiajs/inertia-laravel": "^2.0.5",
        "laravel/framework": "^12.24.0",
        "laravel/prompts": "^0.3.6",
        "laravel/tinker": "^2.10.1",
        "tightenco/ziggy": "^2.5.3"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16.0",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.6.0",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.24.0",
        "laravel/sail": "^1.44.0",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^3.8.2",
        "pestphp/pest-plugin-laravel": "^3.2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "setup": [
            "composer install",
            "npm install",
            "@php artisan momtrax:setup --fresh"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "format": [
            "./vendor/bin/pint --parallel"
        ],
        "lint": [
            "./vendor/bin/phpstan analyse --memory-limit=2G",
            "./vendor/bin/peck"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test --parallel"
        ],
        "sweep": [
            "composer format",
            "composer lint",
            "composer test"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
